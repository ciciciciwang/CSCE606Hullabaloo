      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :UIN %><br>
    <%= f.text_field :UIN %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :US_Citizen %><br>
    <%= f.check_box :US_Citizen %>
  </div>
  <div class="field">
    <%= f.label :degree %><br>
    <%= f.select :degree, options_for_select(%w[B.S. M.S. PH.D]) %>
  </div>
  <div class="field">
    <%= f.label :position_type %><br>
    <%= f.select :position_type, options_for_select(%w[Internship Full-time]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
