<p id="notice"><%= notice %></p>

<div style = "text-align: center">
  <font size="5px" color=maroon><strong><%= "2015 IAP Recruiting Events and Reception/CSE-Only Career Fair"%></strong></font><br><br>
  </div>

<div style = "text-align: center">
  <font size="5px" color=maroon><strong><%= "Student List(Administrative View)"%></strong></font><br><br>
  </div>

<p> Students registered for lunch:
<%= @lunch_total%>
</p>
<br>

<table border="3px" cellspacing = "0px" bordercolor = "#000000">
  <thead>
    <tr>
      <th>Name</th>
      <th>UIN</th>
      <th>Email</th>
      <th>US Citizen</th>
      <th>Degree</th>
      <th>Position Type</th>
      <th>Mock 1</th>
      <th>Mock 2</th>
      <th>Resume 1</th>
      <th>Resume 2</th>
      <th>Resume 3</th>
      <th>Lunch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.UIN %></td>
        <td><%= student.email %></td>
        <td><%= student.US_Citizen %></td>
        <td><%= student.degree %></td>
        <td><%= student.position_type %></td>
        <td><%= student.Mock_1 %></td>
        <td><%= student.Mock_2 %></td>
        <td><%= student.Resume_1 %></td>
        <td><%= student.Resume_2 %></td>
        <td><%= student.Resume_3 %></td>
        <td><%= student.Lunch %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
